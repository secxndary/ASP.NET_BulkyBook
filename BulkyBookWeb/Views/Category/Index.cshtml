@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary p-2" style="width: 220px">
                <i class="bi bi-plus-circle"></i> 
                &nbsp; Create new category
            </a>
        </div>
    </div>
    <br/>


    <table class="table" style="width:100%">
        <thead class="bg-dark">
            <tr>
                <th></th>
                <th>Id</th>
                <th>Display Order</th>
                <th>Category Name</th>
                <th>Creation Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="1%"></td>
                    <td width="6%">@category.Id</td>
                    <td width="8%">@category.DisplayOrder</td>
                    <td width="25%">@category.Name</td>
                    <td width="20%">@category.CreatedDateTime</td>
                    <td width="10%">
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" 
                            class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i> 
                                &nbsp; Edit
                            </a>
                        </div>
                    </td>
                     <td width="10%">
                        <div class="btn-group w-75" role="group">
                            <form method="post" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                <button class="btn btn-danger mx-1" type="submit" style="width: 100px">
                                    <i class="bi bi-trash3"></i>
                                    &nbsp; Delete
                                </button>
                            </form>
                            
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
