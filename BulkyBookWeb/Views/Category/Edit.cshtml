@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex align-items-center justify-content-center pt-md-5" >
    <form method="post">
        <div class="p-4 mt-4 border border-light" style="width: 500px">

            <div class="row pb-2">
                <h2 class="text-primary text-center">Edit category</h2>
            </div>

            @*<div asp-validation-summary="All"></div>*@

            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CreatedDateTime">Created DateTime</label>
                <input asp-for="CreatedDateTime" class="form-control" />
                <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-around">
                <button asp-controller="Category" asp-action="Edit" type="submit" 
                class="btn btn-primary p-2" style="width: 160px">Update</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary p-2" style="width: 160px">Back to list</a>
            </div>
           
        </div>
    </form>
</div>


@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}
